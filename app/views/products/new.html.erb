<%= link_to '戻る', products_path, class:'btn' %>
<%= render 'shared/error_message', object: @product %>
<%= form_with model: @product do |f| %>
  <div class="form-control">
    <%= f.label :code, class:'label' %>
    <%= f.text_field :code, class:'input input-bordered w-full max-w-xs' %>
  </div>
  <div class="form-control">
    <%= f.label :name, class:'label' %>
    <%= f.text_field :name, class:'input input-bordered w-full max-w-xs' %>
  </div>
  <div class="form-control">
    <%= f.label :price, class:'label' %>
    <%= f.text_field :price, class:'input input-bordered w-full max-w-xs' %>
  </div>
  <%= f.submit class:'btn btn-primary' %>
<% end %>